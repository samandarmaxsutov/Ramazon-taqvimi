<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"

        android:padding="2dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/kun"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/stayle_left"
            android:gravity="center"
            android:text="1"
            android:textSize="20sp"
            android:textStyle="bold"/>



        <TextView
            android:textColor="#DC704E"
            android:background="#77BA7A"
            android:id="@+id/icon"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:text="Hafta kuni"
            android:gravity="center"
            android:textStyle="italic|bold"
            android:textSize="20dp"

            />
        <TextView
            android:id="@+id/sana"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="#B0E8B0"
            android:gravity="center"
            android:text="03.04.2020"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#574D4D"
                android:background="#FFEB3B"
                android:layout_weight="1"
                android:text="Saharlik"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textStyle="bold" />

            <TextView
                android:textColor="#FBF4F4"
                android:background="@drawable/stayle_right"
                android:id="@+id/description2"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Iftorlik"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>