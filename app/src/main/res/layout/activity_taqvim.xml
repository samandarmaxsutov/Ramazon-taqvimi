<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Taqvim">
    //Taqvim

    <LinearLayout
        android:id="@+id/layout_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:visibility="gone"
        android:orientation="vertical"
        android:background="@drawable/img_4">

        <TextView

            android:id="@+id/text_shahar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Toshkent"
            android:textSize="40sp"

            android:gravity="center"
            android:textStyle="italic|bold"
            android:textColor="#FFFFFF"/>

        <ListView
            android:dividerHeight="2dp"
            android:id="@+id/list_View"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp" />
    </LinearLayout>

    //Bugungi kun

    <ScrollView
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:background="@drawable/baa"
        android:visibility="visible">
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="30sp"
                android:id="@+id/text_shahar2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Toshkent"
                android:textSize="40sp"
                android:gravity="center"
                android:textStyle="italic|bold"
                android:textColor="#0B1917"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Bugungi kun:"
                android:textColor="@color/ramazon2_background"
                android:textSize="30sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/bugungi_kun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="03.04.2022"
                android:textColor="@color/purple_700"
                android:textSize="30sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/hafta_kun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/aclonica"
                android:gravity="center"
                android:text="Juma"
                android:textAllCaps="true"
                android:textColor="#3F51B5"
                android:textSize="30sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Hozirgi vaqt"
                android:textColor="@color/ramazon2_background"
                android:textSize="30sp"
                android:textStyle="italic" />

            <TextClock
                android:id="@+id/textclock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textColor="@color/purple_700"
                android:textSize="30sp" />
            <Button

                android:id="@+id/budulnik"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:background="@drawable/budulnik_stayle"
                android:layout_height="40dp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="30sp"
                android:layout_marginStart="30sp"
                android:text="Budilnik"/>
<LinearLayout
    android:layout_marginRight="2dp"
    android:layout_marginLeft="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
            <TextView
                android:background="#E89191"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Saharlik \n vaqti"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="italic|bold" />
    <TextView
        android:background="#DFB776"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Iftorlik \nvaqti"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="italic|bold" /></LinearLayout>

           <LinearLayout
               android:layout_marginRight="2dp"
               android:layout_marginLeft="2dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
            <TextView
                android:background="#E89191"
                android:id="@+id/saharlik_vaqti1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="04:037"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="italic|bold" />



            <TextView
                android:background="#DFB776"
                android:id="@+id/iftorlik_vaqti_vaqti1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="17:30"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="italic|bold" />
           </LinearLayout>

        </LinearLayout>

    </ScrollView>
    //setting

    <LinearLayout
        android:id="@+id/layout_budulnik"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@drawable/baa">

        <ListView
            android:id="@+id/list_view2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/white"

            />
    </LinearLayout>


    //Duolar


        <LinearLayout
            android:visibility="gone"
            android:id="@+id/layout_duolar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:gravity="center"
            android:orientation="vertical"
           >


            <ExpandableListView
                android:layout_gravity="center"

                android:id="@+id/expendableList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@android:color/background_light"
                android:dividerHeight="0.5dp" />

        </LinearLayout>



    //Navigation bottom

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:background="#FAFDFD"
        app:itemIconTint="#00897B"
        app:menu="@menu/button_menyu" />
</LinearLayout>